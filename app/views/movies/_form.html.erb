<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :rating %> <br>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :total_gross %> <br>
    <%= f.number_field :total_gross %>
  </p>
  <p>
    <%= f.label :premiere %> <br>
    <%= f.date_field :premiere %>
  </p>
  <p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 7, cols: 40 %>
  </p>
  <p>
    <%= f.label :cast %><br>
    <%= f.text_field :cast, rows: 7, cols: 40 %>
  </p>
  <p>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :image_file_name %><br>
    <%= f.text_field :image_file_name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>